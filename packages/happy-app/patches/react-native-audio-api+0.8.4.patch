@@ -82,6 +82,22 @@ static def supportsNamespace() {

 def reactNativeRootDir = resolveReactNativeDirectory()

+// On Windows, ninja 1.10 (bundled with Android SDK CMake 3.22) cannot
+// handle deeply-nested object dirs that exceed MAX_PATH (260 chars).
+// Create a short junction to common/cpp to keep paths under the limit.
+def commonCppDir = toPlatformFileString(new File(projectDir, "../common/cpp").canonicalPath)
+if (Os.isFamily(Os.FAMILY_WINDOWS)) {
+  def junctionDir = new File(projectDir, "_cpp")
+  if (!junctionDir.exists()) {
+    def target = new File(projectDir, "../common/cpp").canonicalPath
+    def proc = ["cmd", "/c", "mklink", "/J", junctionDir.absolutePath, target].execute()
+    proc.waitFor()
+  }
+  if (junctionDir.exists()) {
+    commonCppDir = toPlatformFileString(junctionDir.absolutePath)
+  }
+}
+
